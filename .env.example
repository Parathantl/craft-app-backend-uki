# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/craft-marketplace

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000

# Email Configuration (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@craftmarketplace.com

# PayHere Configuration (Sri Lankan Payment Gateway)
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_SECRET_KEY=your-secret-key
PAYHERE_SANDBOX_URL=https://sandbox.payhere.lk/pay/checkout
PAYHERE_LIVE_URL=https://www.payhere.lk/pay/checkout

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
